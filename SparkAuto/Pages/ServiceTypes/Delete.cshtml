@page
@model SparkAuto.Pages.ServiceTypes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete service</h2>
<br />
<h3>Are you sure you want to delete this?</h3>

<div class="container">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                @Html.DisplayNameFor(model => model.ServiceType.Name)
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.ServiceType.Name)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                @Html.DisplayNameFor(model => model.ServiceType.Price)
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.ServiceType.Price)
            </div>
        </div>
        <form method="post">
            <input type="hidden" asp-for="ServiceType.Id" />
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-danger form-control" value="Delete" />
                        </div>
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-success form-control"> Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>