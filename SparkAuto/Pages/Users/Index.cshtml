@page
@model SparkAuto.Pages.Users.IndexModel
@{
}

<form method="get" asp-page="Index">
    <br /> <br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Customers List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info">
                <i class="fa fa-plus"></i>&nbsp; Create new Customer
            </a>
        </div>
    </div>

    <div class="border backgroundWhite">
        <div class="container border">
        <div class="row">
            <div class="col-11" style="padding-top: 10px">
                <div class="col-4 ">
                    @Html.Editor("searchEmail", new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Email..."
                        }
                    })
                </div>
                <div class="col-4">
                    @Html.Editor("searchName", new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Name..."
                        }
                    })
                </div>
                <div class="col-4">
                    @Html.Editor("searchPhone", new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Phone..."
                        }
                    })
                </div>
                <div class="col-1">
                    <div class="row" style="padding-top: 10px; padding-right: 15px">
                        <button type="submit" name="submit" value="Search" , class="btn btn-info form-control">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <br/>
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVm.ApplicationUserList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVm.ApplicationUserList[0].PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVm.ApplicationUserList[0].Email)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.UserListVm.ApplicationUserList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Email)
                        </td>
                        <td></td>
                        <td style="width: 150px">
                            <div class="btn-group" role="group">
                                <a asp-page="Edit" class="btn btn-primary text-white" asp-route-id="@item.Id">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>
                            <div class="btn-group" role="group">
                                <a asp-page="Delete" class="btn btn-danger text-white" asp-route-id="@item.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="5" class="text-right">
                        <div page-model="@Model.UserListVm.PagingInfo"
                             asp-action="Index" page-class="btn border" page-class-normal="btn btn-light"
                             page-class-selected="btn btn-info active" class="btn-group">
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
